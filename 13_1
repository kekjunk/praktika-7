//Практика 13 Задание 1
#include <iostream>
#include <string>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    int n;
    cout << "Enter the number of words: ";
    cin >> n;
    if (n <= 0 || n > 1000) {
        cout << "Incorrect number of words" << endl;
        return 1;
    }    
    vector<string> words(n);
    cout << "Enter " << n << " word(s):" << endl;
    for (int i = 0; i < n; i++) {
        cin >> words[i];
        if (words[i].length() > 100) {
            cout << "The word is too long" << endl;
            return 1;
        }
        for (char c : words[i]) {
            if (c < 'a' ||  c > 'z') {
                cout << "The word contains invalid characters" << endl;
                return 1;
            }
        }
    }
    vector<int> common_letters(26, 0);
    for (char c : words[0]) {
        common_letters[c - 'a'] = 1;
    }
    for (int i = 1; i < n; i++) {
        vector<int> current_letters(26, 0);
        for (char c : words[i]) {
            current_letters[c - 'a'] = 1;
        }
        for (int j = 0; j < 26; j++) {
            common_letters[j] = common_letters[j] && current_letters[j];
        }
    }
    cout << "Common letters: ";
    bool found = false;
    for (int i = 0; i < 26; i++) {
        if (common_letters[i] > 0) {
            cout << char('a' + i);
            found = true;
        }
    }    
    if (!found) {
        cout << "There are no common letters";
    }
    cout << endl;    
    return 0;
}